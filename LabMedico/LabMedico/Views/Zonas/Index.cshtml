@model IEnumerable<LabMedico.Models.Zona>

@{
    ViewBag.Title = "Zonas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Registrar", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ZonaNombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ZonaNombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.ZonaId }) |
            @Html.ActionLink("Detalle", "Details", new { id=item.ZonaId }) |
            @Html.ActionLink("Borrar", "Delete", new { id=item.ZonaId })
        </td>
    </tr>
}

</table>
